<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.votu.rfatvapp.activities.ExchangesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp">
        <TextView
            style="@style/project_text_appearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_filter_text_description"
            tools:text="Filtrar inventários por:" />

        <Spinner
            android:id="@+id/spinner_inventory_status_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/project_text_appearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Escolha os inventários que deseja enviar" />

        <ListView
            android:id="@+id/list_of_saved_inventory"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
